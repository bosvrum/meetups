<%= form_for(@event) do |f| %>
  <li>
    <%= f.label :place %>
    <%= f.text_field :place, autofocus: true %>
  </li>
  <li>
    <%= f.label :city %>
    <%= f.text_field :city, size: 30 %>
  </li>
  <li>
    <%= f.label :start_date %>
    <%= f.datetime_select :start_date %>
  </li>

  <li>
    <%= f.label :end_date %>
    <%= f.datetime_select :end_date %>
  </li>

  <li>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
  </li>

  <%= f.submit %>
  <%= link_to "Cancel", events_path, class: 'button' %>
<% end %>
